<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

        <record id="dropshiping_sale_view_order_form_typ_new" model="ir.ui.view">
            <field name="name">dropshipping.sale.order.line.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="special_sale" />
                    <field name="date_arranged" attrs="{'required':[('special_sale','=',True)],'invisible':[('special_sale','=',False)]}"/> <!-- readonly -->
                    <field name="ship_to" attrs="{'required':[('special_sale','=',True)],'invisible':[('special_sale','=',False)]}"/>
                    <field name="change_address" attrs="{'invisible':[('special_sale','=',False)]}"/>
                    <field name="special_ship" width="200" attrs="{'invisible':[('special_sale','=',True)],'invisible':[('change_address','=',False)],'required':[('change_address','=',True)]}"/>
                    <field name="partial_supply" attrs="{'invisible':[('special_sale','=',False)]}"/>
                    <field name="ship_invoiced" attrs="{'invisible':[('special_sale','=',False)]}"/>
                    
                </field>
            </field>
        </record>

         <record id="dropshiping_sale_view_order_form_typ_new_2" model="ir.ui.view">
            <field name="name">dropshiping.sale.order.form.special</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale_margin.sale_margin_sale_order" />
            <field name="arch" type="xml">
                    <xpath expr="//group[@name='sale_margin_grp']" position="after">
                    <group name="special_sale_grp">
                      <field name="special_sale_global"/>
                      <field name="supplier_id" attrs="{'required':[('special_sale_global','=',True)],'invisible':[('special_sale_global','=',False)]}"/>  
                      <field name="special_ship_global" width="300" attrs="{'required':[('special_sale_global','=',True)],'invisible':[('special_sale_global','=',False)]}"/>
                      <field name="import_type" width="100" attrs="{'required':[('special_sale_global','=',True)],'invisible':[('special_sale_global','=',False)]}"/>
                  </group>

              </xpath>
            </field>
        </record>
</data>
</openerp>
